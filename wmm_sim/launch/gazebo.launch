<launch>
  <!-- Load the SDF model -->
  <arg name="model" default="$(find wmm_sim)/sdf/wmm.sdf"/>

  <!-- Load the controller configuration -->
  <rosparam file="$(find wmm_sim)/config/controller.yaml" command="load"/>

  <!-- Spawn the robot in Gazebo -->
  <node name="spawn_model" pkg="gazebo_ros" type="spawn_model" args="-sdf -file $(arg model) -model WMM" />

  <!-- Spawn the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" args="joint_state_controller wheel_front_left_controller wheel_front_right_controller wheel_back_left_controller wheel_back_right_controller" output="screen"/>

  <!-- Launch Gazebo with an empty world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
</launch>
